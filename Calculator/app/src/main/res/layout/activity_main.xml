<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/calculator_tv"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/calculation_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="serif-monospace"
            android:lines="1"
            android:padding="5dp"
            android:text=""
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textDirection="rtl"
            android:textSize="30sp"
            android:textStyle="bold">

        </TextView>
        <TextView
            android:padding="5dp"
           android:textAlignment="gravity"
            android:lines="1"
            android:layout_below="@+id/calculation_tv"
            android:id="@+id/result_tv"
            android:textDirection="rtl"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="serif-monospace"
            android:text=""
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="40dp">

        </TextView>

    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/calculator_tv"
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/line1"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/AC"
                android:layout_marginHorizontal="15dp"
                android:backgroundTint="@color/teal_200"
                android:layout_width="60dp"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center"
                android:layout_height="60dp">
                <TextView
                    android:fontFamily="sans-serif-condensed-light"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/back_card"
                android:layout_marginHorizontal="15dp"
                android:backgroundTint="@color/teal_200"
                android:layout_width="60dp"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center"
                android:layout_height="60dp">
                <ImageView
                    android:id="@+id/back"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_twotone_backspace_24"
                    android:layout_width="30dp"
                    android:layout_height="25dp">

                </ImageView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/percentage"
                android:layout_marginHorizontal="15dp"
                android:backgroundTint="@color/teal_200"
                android:layout_width="60dp"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center"
                android:layout_height="60dp">
                <TextView
                    android:fontFamily="sans-serif-condensed-light"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/divide"
                android:layout_marginHorizontal="15dp"
                android:backgroundTint="@color/teal_200"
                android:layout_width="60dp"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center"
                android:layout_height="60dp">
                <TextView
                    android:fontFamily="sans-serif-condensed-light"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/line2"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/nine"
                android:layout_marginHorizontal="15dp"
                app:cardBackgroundColor="@color/material_on_surface_stroke"
                android:layout_width="60dp"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center"
                android:layout_height="60dp">
                <TextView
                    android:fontFamily="sans-serif-condensed-light"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/eight"
                android:layout_marginHorizontal="15dp"
                app:cardBackgroundColor="@color/material_on_surface_stroke"
                android:layout_width="60dp"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center"
                android:layout_height="60dp">
                <TextView
                    android:fontFamily="sans-serif-condensed-light"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/seven"
                android:layout_marginHorizontal="15dp"
                app:cardBackgroundColor="@color/material_on_surface_stroke"
                android:layout_width="60dp"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center"
                android:layout_height="60dp">
                <TextView
                    android:fontFamily="sans-serif-condensed-light"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/multiply"
                app:cardBackgroundColor="@color/material_on_surface_stroke"
                android:layout_marginHorizontal="15dp"
                android:layout_width="60dp"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center"
                android:layout_height="60dp"
                >
                <TextView
                    android:fontFamily="sans-serif-condensed-light"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                </TextView>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/line3"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/six"
                android:layout_marginHorizontal="15dp"
                app:cardBackgroundColor="@color/material_on_surface_stroke"
                android:layout_width="60dp"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center"
                android:layout_height="60dp">
                <TextView
                    android:fontFamily="sans-serif-condensed-light"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/five"
                android:layout_marginHorizontal="15dp"
                app:cardBackgroundColor="@color/material_on_surface_stroke"
                android:layout_width="60dp"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center"
                android:layout_height="60dp">
                <TextView
                    android:fontFamily="sans-serif-condensed-light"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/four"
                android:layout_marginHorizontal="15dp"
                app:cardBackgroundColor="@color/material_on_surface_stroke"
                android:layout_width="60dp"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center"
                android:layout_height="60dp">
                <TextView
                    android:fontFamily="sans-serif-condensed-light"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/plus"
                android:layout_marginHorizontal="15dp"
                android:layout_width="60dp"
                app:cardBackgroundColor="@color/material_on_surface_stroke"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center"
                android:layout_height="60dp">
                <TextView
                    android:fontFamily="sans-serif-condensed-light"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/line4"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/three"
                android:layout_marginHorizontal="15dp"
                app:cardBackgroundColor="@color/material_on_surface_stroke"
                android:layout_width="60dp"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center"
                android:layout_height="60dp">
                <TextView
                    android:fontFamily="sans-serif-condensed-light"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/two"
                android:layout_marginHorizontal="15dp"
                app:cardBackgroundColor="@color/material_on_surface_stroke"
                android:layout_width="60dp"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center"
                android:layout_height="60dp">
                <TextView
                    android:fontFamily="sans-serif-condensed-light"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/one"
                android:layout_marginHorizontal="15dp"
                app:cardBackgroundColor="@color/material_on_surface_stroke"
                android:layout_width="60dp"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center"
                android:layout_height="60dp">
                <TextView
                    android:fontFamily="sans-serif-condensed-light"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/minus"
                android:layout_marginHorizontal="15dp"
                android:layout_width="60dp"
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="@color/material_on_surface_stroke"
                android:layout_gravity="center"
                android:layout_height="60dp">
                <TextView
                    android:fontFamily="sans-serif-condensed-light"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/line5"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/dot"
                android:layout_marginHorizontal="15dp"
                app:cardBackgroundColor="@color/material_on_surface_stroke"
                android:layout_width="60dp"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center"
                android:layout_height="60dp">
                <TextView
                    android:fontFamily="sans-serif-condensed-light"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/zero"
                android:layout_marginHorizontal="15dp"
                app:cardBackgroundColor="@color/material_on_surface_stroke"
                android:layout_width="60dp"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center"
                android:layout_height="60dp">
                <TextView
                    android:fontFamily="sans-serif-condensed-light"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/braket"
                android:layout_marginHorizontal="15dp"
                app:cardBackgroundColor="@color/material_on_surface_stroke"
                android:layout_width="60dp"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center"
                android:layout_height="60dp">
                <TextView
                    android:fontFamily="sans-serif-condensed-light"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="()"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/equals"
                android:layout_marginHorizontal="15dp"
                android:layout_width="60dp"
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="@color/material_on_surface_stroke"
                android:layout_gravity="center"
                android:layout_height="60dp">
                <TextView
                    android:fontFamily="sans-serif-condensed-light"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="="
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>



</RelativeLayout>